.post
  %strong.chicklet
    = event.type || "Post"
  %p.info
  %h1= event.title
  - if event.type == "Event"
    .event-meta
      .presenting
        %em Presenting
        = event.presenter
      .date
        %em 
          = event.start_time.to_s :long_ordinal_12hour
        at
        = link_to event.location.name, p_location_url(:permalink => event.location.permalink)
  - unless event.type
    .post-meta
      = event.created_at.to_s :short_date_only
      %em
        by
      = event.author.name
  .post-content
    = textilize event.body
    #tools
      %a{:href => post_url(event.permalink)} permalink
